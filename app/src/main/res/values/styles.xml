<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/PrimaryWhite</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/Bianco</item>
        <!--
        <item name="android:fontFamily">@font/assistant_light</item>
        <item name="titleTextStyle">@font/assistant</item>
        <item name="titleTextAppearance">@font/assistant_bold</item>
        -->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="MyCheckboxTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#2FFF00</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="BottoniStati" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/AltroDark</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/PrimaryWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>