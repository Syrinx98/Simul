<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/Nero</item>
        <item name="colorOnSecondary">@color/primaryWhite</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/primaryWhite</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/primaryWhite</item>
        <item name="android:textColorPrimary">@color/primaryWhite</item>
        <item name="colorError">@color/Rosso</item>
        <!-- Widgets -->
        <item name="materialCardViewStyle">@style/my_cardview</item>
        <item name="textInputStyle">@style/my_textinput</item>
        <item name="materialButtonStyle">@style/my_button</item>
        <item name="materialButtonOutlinedStyle">@style/my_outlined_button</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <!-- Fonts -->
        <item name="textAppearanceHeadline1">@style/custom_headline1</item>
        <item name="textAppearanceHeadline2">@style/custom_headline2</item>
        <item name="textAppearanceHeadline3">@style/custom_headline3</item>
        <item name="textAppearanceHeadline4">@style/custom_headline4</item>
        <item name="textAppearanceHeadline5">@style/custom_headline5</item>
        <item name="textAppearanceHeadline6">@style/custom_headline6</item>
        <item name="textAppearanceSubtitle1">@style/custom_subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/custom_subtitle2</item>
        <item name="textAppearanceBody1">@style/custom_body1</item>
        <item name="textAppearanceBody2">@style/custom_body2</item>
        <item name="textAppearanceButton">@style/custom_button</item>
        <item name="textAppearanceCaption">@style/custom_caption</item>
        <item name="textAppearanceOverline">@style/custom_overline</item>
    </style>

    <!-- button style -->

    <style name="my_button" parent="Widget.MaterialComponents.Button">
        <item name="elevation">0dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="shapeAppearance">@style/my_small_shape</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="my_outlined_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="elevation">0dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="shapeAppearance">@style/my_small_shape</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="my_delete_button" parent="my_outlined_button">
        <item name="android:textColor">@color/Rosso</item>
        <item name="strokeColor">@color/Rosso</item>
        <item name="rippleColor">@color/Rosso</item>
    </style>

    <!-- shapes -->

    <style name="my_small_shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="my_large_shape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <!-- cardview style -->

    <style name="my_cardview" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">0dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <!-- textinput style -->

    <style name="my_textinput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/my_small_shape</item>
    </style>

    <!-- drawer icon -->

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primaryWhite</item>
    </style>

    <!-- bottoni stati -->

    <style name="BottoniStati" parent="my_button">
        <item name="android:visibility">gone</item>
        <item name="iconTint">@color/Nero</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Nero</item>
        <item name="fontWeight">700</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="BottoniStatiVerdi" parent="BottoniStati">
        <item name="backgroundTint">@color/Verde</item>
    </style>

    <style name="BottoniStatiGialli" parent="BottoniStati">
        <item name="backgroundTint">@color/Giallo</item>
    </style>

    <style name="BottoniStatiRossi" parent="BottoniStati">
        <item name="backgroundTint">@color/Rosso</item>
    </style>

    <!-- navigation view -->

    <style name="my_navigationview" parent="Widget.Design.NavigationView">
        <item name="shapeAppearance">@style/my_large_shape</item>
    </style>

    <!-- fonts -->

    <style name="custom_headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/archivo_semibold</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/archivo_semibold</item>
        <item name="android:textColor">@color/secondaryWhite</item>
    </style>

    <style name="custom_body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/archivo_medium</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="custom_body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/archivo_medium</item>
        <item name="android:textColor">@color/secondaryWhite</item>
    </style>

    <style name="custom_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/archivo_semibold</item>
    </style>

    <style name="custom_caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/archivo_medium</item>
        <item name="android:textColor">@color/secondaryWhite</item>
    </style>

    <style name="custom_overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/archivo_medium</item>
    </style>

    <!-- stili di fish -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/Bianco</item>
        <!--
        <item name="android:fontFamily">@font/assistant_light</item>
        <item name="titleTextStyle">@font/assistant</item>
        <item name="titleTextAppearance">@font/assistant_bold</item>
        -->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">20dp</item>
    </style>

</resources>