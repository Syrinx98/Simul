<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/stato_overlay_bg"
        android:padding="30dp">

        <TextView
            android:textColor="@color/PrimaryWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Imposta il tuo contatto d'emergenza"
            android:drawableRight="@drawable/ic_angelo_dim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25dp"
            android:id="@+id/textInput_angelo_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/SecondaryWhite"
            app:boxBackgroundColor="@color/GrigioTextForm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/angelo_nome"
                android:layout_width="match_parent"
                android:maxLines="20"
                android:layout_height="wrap_content"
                android:textColor="@color/PrimaryWhite" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="15dp"
            android:id="@+id/textInput_angelo_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero di telefono"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/SecondaryWhite"
            app:boxBackgroundColor="@color/GrigioTextForm">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="phone"
                android:id="@+id/angelo_numero"
                android:maxLines="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/PrimaryWhite" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_conferma_dati_angelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_primary_bg"
            android:text="Conferma"
            android:textColor="@color/PrimaryWhite"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>