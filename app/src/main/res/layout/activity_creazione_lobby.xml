<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreazioneLobbyActivity"
    android:background="@color/AltroDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:paddingBottom="50dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_id_stanza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID stanza: #"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/PrimaryWhite"/>

                <TextView
                    android:id="@+id/chosen_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_id_stanza_number"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/PrimaryWhite"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Dove si va?"
                app:boxBackgroundColor="@color/GrigioTextForm"
                android:textColorHint="@color/SecondaryWhite">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/destinazione_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/crea_lobby_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/ViolaChiaro"
            android:text="Crea stanza"
            android:textSize="12dp"
            android:textColor="@color/Nero"
            app:icon="@drawable/ic_outline_add"
            app:iconSize="12dp"
            app:iconTint="@color/Nero"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Annulla"
            android:textSize="12dp"
            android:textColor="@color/ViolaChiaro"/>

    </RelativeLayout>



</FrameLayout>