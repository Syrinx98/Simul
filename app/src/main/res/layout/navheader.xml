<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AltroDark"
    android:paddingTop="50dp"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profilepic" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/nav_profile_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_utente"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/PrimaryWhite"/>

        <TextView
            android:id="@+id/nav_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_utente"
            android:textSize="14dp"
            android:textColor="@color/SecondaryWhite"
            android:layout_marginTop="1dp"/>

    </LinearLayout>


</LinearLayout>